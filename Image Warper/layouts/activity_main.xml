<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <Button
        android:id="@+id/pictureButton"
        android:layout_width="118dp"
        android:layout_height="91dp"
        android:onClick="iButtonAction"
        android:text="Select Your Picture"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Select Your Picture"
        tools:visibility="visible" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="118dp"
        android:layout_height="91dp"
        android:onClick="cButtonAction"
        android:text="Take Picture and Warp"
        app:layout_constraintBottom_toTopOf="@+id/pictureButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Take Picture and Warp" />

    <Button
        android:id="@+id/pdfButton"
        android:layout_width="118dp"
        android:layout_height="91dp"
        android:onClick="pButtonAction"
        android:text="turn pictures to PDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pictureButton"
        tools:text="turn pictures to PDF" />

</androidx.constraintlayout.widget.ConstraintLayout>